{
  "name": "prerender-docker",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"${NODE_ENV}\"",
    "auth": "$(aws ecr get-login --no-include-email)",
    "build": "./node_modules/.bin/concurrently \"npm run build:server\" \"npm run build:agent\"",
    "build:server": "docker build -t prerender-server ./prerender-server",
    "build:agent": "docker build -t prerender-agent ./prerender-agent",
    "tag": "echo \"${REGISTRY:?\"Must supply registry\"}\" && ./node_modules/.bin/concurrently \"npm run tag:server\" \"npm run tag:agent\"",
    "tag:server": "docker tag prerender-server ${REGISTRY:?empty}/prerender-server",
    "tag:agent": "docker tag prerender-agent ${REGISTRY:?empty}/prerender-agent",
    "push": "echo \"${REGISTRY:?\"Must supply REGISTRY\"}\" && ./node_modules/.bin/concurrently \"npm run push:server\" \"npm run push:agent\"",
    "push:server": "docker push ${REGISTRY:?empty}/prerender-server",
    "push:agent": "docker push ${REGISTRY:?empty}/prerender-agent",
    "release": "npm run build && npm run tag && npm run auth && npm run push",
    "start": "docker-compose up",
    "stop": "docker-compose down",
    "conn": "ssh -i ${PEM:?\"Path to pem required\"} -t ec2-user@${EC2:?\"EC2 dns required\"}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "dependencies": {
    "express": "^4.16.4",
    "node-fetch": "^2.3.0",
    "on-finished": "^2.3.0",
    "on-headers": "^1.0.1",
    "winston": "^3.1.0"
  }
}
